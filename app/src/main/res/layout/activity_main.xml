<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="github.adewu.rtmppublisher.github.adewu.rtmppublisher.MainActivity">

    <github.adewu.rtmppublisher.widgets.PreviewSurfaceView
        android:id="@+id/preview_sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_btn"
        android:text="@string/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/preview_sv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.953" />

    <EditText
        android:id="@+id/url_et"
        android:text="@string/rtmp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/preview_sv"
        app:layout_constraintTop_toTopOf="@+id/preview_sv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.017" />
</android.support.constraint.ConstraintLayout>
